<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".TutorListActivity">

    <!-- ======= TOP BAR ======= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="#26C6DA"
        android:paddingHorizontal="16dp"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutor_list_title"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/back_svgrepo_com"
            app:tint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ======= FILTRO (opcional) ======= -->
    <LinearLayout
        android:id="@+id/filterRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="#006064" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutor_list_no_filter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#006064"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- ======= SCROLL DE TARJETAS ======= -->
    <ScrollView
        android:id="@+id/scrollTutors"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="14dp"
        app:layout_constraintTop_toBottomOf="@id/filterRow"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/tutorList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- ========= TARJETA TUTOR ========= -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="#26C6DA" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Avatar -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="62dp"
                            android:layout_height="62dp"
                            app:cardCornerRadius="31dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#E0F7FA">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@android:drawable/ic_menu_my_calendar"
                                app:tint="#26C6DA"
                                android:padding="14dp" />
                        </androidx.cardview.widget.CardView>

                        <!-- Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="14dp">

                            <TextView
                                android:id="@+id/tutorName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Juan Pérez"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#00363A"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <!-- SOLO 1 CHIP: Matemática -->
                            <LinearLayout
                                android:id="@+id/subjectsStack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="8dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp"
                                    android:backgroundTint="#E0F7FA">

                                    <TextView
                                        android:id="@+id/chipSubject1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Matemática"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="#006064"
                                        android:paddingHorizontal="12dp"
                                        android:paddingVertical="7dp"
                                        android:singleLine="true" />
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <!-- SOLO: calificación + estrellas -->
                            <LinearLayout
                                android:id="@+id/ratingRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/txtRatingValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4.9"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#006064"
                                    android:layout_marginEnd="6dp" />

                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="5"
                                    android:stepSize="0.5"
                                    android:rating="4.5"
                                    android:isIndicator="true" />
                            </LinearLayout>

                        </LinearLayout>

                        <!-- Botón -->
                        <TextView
                            android:id="@+id/btnViewProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver perfil"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="10dp"
                            android:background="#26C6DA"
                            android:layout_marginStart="10dp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- ======= BOTTOM BAR ======= -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="10dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnList"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/list_svgrepo_com"
            app:tint="#26C6DA" />

        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/home_svgrepo_com"
            app:tint="#26C6DA" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
