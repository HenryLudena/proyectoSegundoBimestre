<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".SessionFormActivity">

    <!-- ======= TOP BAR ======= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="#26C6DA"
        android:paddingHorizontal="16dp"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/titleAgenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/session_title"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/back_svgrepo_com"
            android:tint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/titleAgenda"
            app:layout_constraintBottom_toBottomOf="@id/titleAgenda" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ======= CONTENIDO ======= -->
    <ScrollView
        android:id="@+id/scrollMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <!-- ======= INTRO CARD ======= -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="#26C6DA" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/session_description"
                        android:textSize="15sp"
                        android:textColor="#37474F"
                        android:padding="16dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ======= DATE CARD ======= -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="#26C6DA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/session_date"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#00363A"
                        android:paddingTop="14dp"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="8dp" />

                    <CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:paddingHorizontal="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ======= HOURS CARD ======= -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="#26C6DA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/session_hour"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#00363A"
                        android:paddingTop="14dp"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="16dp">

                        <!-- Fila 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <Button
                                android:id="@+id/btn10"
                                android:layout_width="0dp"
                                android:layout_height="46dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="6dp"
                                android:text="10:00"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:backgroundTint="#26C6DA" />

                            <Button
                                android:id="@+id/btn12"
                                android:layout_width="0dp"
                                android:layout_height="46dp"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="6dp"
                                android:text="12:00"
                                android:textColor="#006064"
                                android:textStyle="bold"
                                android:backgroundTint="#E0F7FA" />

                            <Button
                                android:id="@+id/btn13"
                                android:layout_width="0dp"
                                android:layout_height="46dp"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                android:text="13:00"
                                android:textColor="#006064"
                                android:textStyle="bold"
                                android:backgroundTint="#E0F7FA" />
                        </LinearLayout>

                        <!-- Fila 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <Button
                                android:id="@+id/btn14"
                                android:layout_width="0dp"
                                android:layout_height="46dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="6dp"
                                android:text="14:00"
                                android:textColor="#006064"
                                android:textStyle="bold"
                                android:backgroundTint="#E0F7FA" />

                            <Button
                                android:id="@+id/btn15"
                                android:layout_width="0dp"
                                android:layout_height="46dp"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="6dp"
                                android:text="15:00"
                                android:textColor="#006064"
                                android:textStyle="bold"
                                android:backgroundTint="#E0F7FA" />

                            <Button
                                android:id="@+id/btn16"
                                android:layout_width="0dp"
                                android:layout_height="46dp"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                android:text="16:00"
                                android:textColor="#006064"
                                android:textStyle="bold"
                                android:backgroundTint="#E0F7FA" />
                        </LinearLayout>

                        <!-- Fila 3 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn17"
                                android:layout_width="0dp"
                                android:layout_height="46dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="6dp"
                                android:text="17:00"
                                android:textColor="#006064"
                                android:textStyle="bold"
                                android:backgroundTint="#E0F7FA" />

                            <Button
                                android:id="@+id/btn18"
                                android:layout_width="0dp"
                                android:layout_height="46dp"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="6dp"
                                android:text="18:00"
                                android:textColor="#006064"
                                android:textStyle="bold"
                                android:backgroundTint="#E0F7FA" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="46dp"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                android:visibility="invisible" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Selecciona un horario disponible"
                            android:textSize="13sp"
                            android:textColor="#607D8B"
                            android:paddingTop="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ======= PLACE CARD ======= -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="#26C6DA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/session_place"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#00363A"
                        android:paddingTop="14dp"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerLugar"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/editbox_dropdown_light_frame" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ======= NOTE CARD ======= -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="#26C6DA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/session_note"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#00363A"
                        android:paddingTop="14dp"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="8dp" />

                    <EditText
                        android:id="@+id/notaInput"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/edit_text"
                        android:gravity="top"
                        android:hint="@string/session_note_example"
                        android:inputType="textMultiLine"
                        android:padding="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ======= BOTÃ“N NEXT (EXISTE) ======= -->
            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/session_btn_next"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#26C6DA"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Revisa la fecha, el horario y el lugar antes de continuar."
                android:textSize="12sp"
                android:textColor="#607D8B"
                android:paddingTop="2dp"
                android:paddingBottom="6dp" />

        </LinearLayout>
    </ScrollView>

    <!-- ======= BOTTOM BAR ======= -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="10dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnList"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/list_svgrepo_com"
            android:tint="#26C6DA" />

        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/home_svgrepo_com"
            android:tint="#26C6DA" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
