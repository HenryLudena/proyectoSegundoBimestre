<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp"
    android:backgroundTint="#FFFFFF">

    <!-- ========= TARJETA TUTOR ========= -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="6dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#26C6DA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Avatar -->
                <androidx.cardview.widget.CardView
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    app:cardCornerRadius="31dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#E0F7FA">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        app:tint="#26C6DA"
                        android:padding="14dp" />
                </androidx.cardview.widget.CardView>

                <!-- Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp">

                    <TextView
                        android:id="@+id/tutorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Juan Pérez"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#00363A"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- SOLO 1 CHIP: Matemática -->
                    <LinearLayout
                        android:id="@+id/subjectsStack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#E0F7FA">

                            <TextView
                                android:id="@+id/chipSubject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Matemática"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#006064"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="7dp"
                                android:singleLine="true" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- SOLO: calificación + estrellas -->
                    <LinearLayout
                        android:id="@+id/ratingRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:rating="4.5"
                            android:isIndicator="true" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Botón -->
                <TextView
                    android:id="@+id/btnViewProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver perfil"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="10dp"
                    android:background="#26C6DA"
                    android:layout_marginStart="10dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>